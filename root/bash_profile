# vim: set ft=sh:
#
# ~/.bash_profile
# get my  .bashrc  settings working in  Console
#

# this should be sourced from a system-dependent parent which defines $ARCHBUILDS

# bashrc is desired for su
if [ -f /root/.bashrc ]; then
    . /root/.bashrc
elif [ -f $ARCHBUILDS/root/bashrc ]; then
    . $ARCHBUILDS/root/bashrc
fi

