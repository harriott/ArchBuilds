# muttrc-*  filetypes are set in  plugin/buffers.vim

# my preferred configuration file for accessing  Fastmail
# I prefer to call this through an alias in my  ~/.bashrc

source $DROPBOX/$AVT661/home-jo/Email/muttrc-MW

# this is developed to my preferences from  accounts/2-fm.muttrc  which was created by  Mutt Wizard
#  mbsync fm   using ~/.mbsyncrc
#  msmtp  uses settings put by  Mutt Wizard  into  ~/.config/msmtp/config

set realname = "Joseph Harriott"
set from = $ftml
set sendmail = "msmtp -a fm"
set folder = "/home/jo/.local/share/mail/fm"
set header_cache = /home/jo/.cache/mutt-wizard/fm/headers
set message_cachedir = /home/jo/.cache/mutt-wizard/fm/bodies
set mbox_type = Maildir

bind index,pager gg noop
bind index,pager g noop
bind index gg first-entry

set spoolfile = "+INBOX"
set record = "+Sent\ Items"
set postponed = "+Drafts"
set trash = "+Trash"

# if you make changes here, you probably need to clear your folders, and start afresh
# rm -r ~/.cache/mutt-wizard/fm/* ~/.local/share/mail/fm/*
# and fix  ~/.mbsyncrc  to correspond
mailboxes "=Archive" "=Drafts" "=INBOX" "=Junk\ Mail" "=Sent\ Items" "=Trash" "=Waiting"

# tweak the default status line to show  "->fm":
set status_format=" -%r-NeoMutt->fm: %D [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]---(%s/%S)-%>-(%P)--- "

macro index,pager ga "<change-folder>=Archive<enter>" "go to Archive"
macro index,pager Ga "<save-message>=Archive<enter>" "move mail to Archive"

macro index,pager gd "<change-folder>=Drafts<enter>" "go to dRafts" # mw-autogenerated
macro index,pager Gd "<save-message>=Drafts<enter>" "move mail to dRafts" # mw-autogenerated

macro index,pager gi "<change-folder>=INBOX<enter>" "go to inbox" # mw-autogenerated
macro index,pager Gi "<save-message>=INBOX<enter>" "move mail to inbox" # mw-autogenerated

macro index,pager gj "<change-folder>=Junk\ Mail<enter>" "go to Junk" # mw-autogenerated
macro index,pager Gj "<save-message>=Junk\ Mail<enter>" "move mail to Junk" # mw-autogenerated

macro index,pager gs "<change-folder>=Sent\ Items<enter>" "go to sent" # mw-autogenerated
macro index,pager Gs "<save-message>=Sent\ Items<enter>" "move mail to sent" # mw-autogenerated

macro index,pager gt "<change-folder>=Trash<enter>" "go to trash" # mw-autogenerated
macro index,pager Gt "<save-message>=Trash<enter>" "move mail to trash" # mw-autogenerated

macro index,pager gw "<change-folder>=Waiting<enter>" "go to Waiting"
macro index,pager Gw "<save-message>=Waiting<enter>" "move mail to Waiting"

