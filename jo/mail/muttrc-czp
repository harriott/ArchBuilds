# muttrc-*  filetypes are set in  plugin/buffers.vim

# my preferred configuration file for accessing  Fastmail
# I prefer to call this through an alias in my  ~/.bashrc

#  mbsync czp   using ~/.mbsyncrc
#  msmtp  uses settings in  ~/.config/msmtp/config

set from = $czp
set sendmail = "msmtp -a czp"
set folder = "$mail/czp"
set header_cache = /home/jo/.cache/mutt/czp/headers
set message_cachedir = /home/jo/.cache/mutt/czp/bodies

set spoolfile = "+Inbox"
set record = "+Sent"
set trash = "+Deleted"

set alias_file = "$GNULE/aliases-czp"
source $alias_file

# if you make changes here, you probably need to clear your folders, and start afresh
# rm -r ~/.cache/mutt/czp/* ~/.local/share/mail/czp/*
# and fix  ~/.mbsyncrc  to correspond
mailboxes "=Archive" "=Deleted" "=Drafts" "=Inbox" "=Junk" "=Sent"
# - any errors here will trigger others
virtual-mailboxes "All" "notmuch://?query=tag:czp"

# tweak the default status line to show  "->czp":
set status_format=" -%r-NeoMutt->czp: %D [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]---(%s/%S)-%>-(%P)--- "

source $email/muttrc-all

macro index,pager ga "<change-folder>=Archive<enter>" "go to Archive"
macro index,pager Ga "<save-message>=Archive<enter>" "move mail to Archive"

macro index,pager gd "<change-folder>=Deleted<enter>" "go to Deleted"
macro index,pager Gd "<save-message>=Deleted<enter>" "move mail to Deleted"

macro index,pager gr "<change-folder>=Drafts<enter>" "go to dRafts"
macro index,pager Gr "<save-message>=Drafts<enter>" "move mail to dRafts"

macro index,pager gi "<change-folder>=Inbox<enter>" "go to Inbox"
macro index,pager Gi "<save-message>=Inbox<enter>" "move mail to Inbox"

macro index,pager gj "<change-folder>=Junk<enter>" "go to Junk"
macro index,pager Gj "<save-message>=Junk<enter>" "move mail to Junk"

macro index,pager gs "<change-folder>=Sent<enter>" "go to Sent"
macro index,pager Gs "<save-message>=Sent<enter>" "move mail to Sent"

